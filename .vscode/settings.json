{
  // GitHub Copilot core settings
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.enable": {
    "*": true,
  },
  // GitHub Copilot advanced language-specific settings
  "github.copilot.advanced": {
    "indentationMode": "keep",
    "promptPrefix": "You are an expert in Kubernetes and Helm charts for the EDP Cluster Add-ons repository. Follow GitOps principles and the App of Apps pattern.",
    "language.yaml.promptPrefix": "You are an expert in Kubernetes manifests and Helm charts. You follow best practices for the EDP Cluster Add-ons repository, maintaining clear separation between add-on configuration and App of Apps configuration. For existing Helm charts, use them as dependencies and create a wrapper chart with the dependency chart name as the top-level key in values.yaml."
  },
  // GitHub Copilot instruction and prompt files settings
  "chat.promptFiles": true,
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  // Custom instructions for code generation specifically for this repository
  "github.copilot.chat.codeGeneration.instructions": [
    {
      "text": "When working with this repository, follow these guidelines: 1) Each add-on should be self-contained in its own directory. 2) For existing Helm charts, use them as dependencies and create a wrapper chart. 3) Use the dependency chart name as the top-level key in values.yaml. 4) The App of Apps values.yaml should ONLY contain enable flags and namespace settings."
    }
  ]
}
